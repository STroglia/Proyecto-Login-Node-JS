<form action="/editar-album/<%= album.id %>" method="POST" enctype="multipart/form-data">
    <div>
        <label for="nombre">Nombre del álbum:</label>
        <input type="text" name="nombre" value="<%= album.nombre %>" required>
    </div>
    <div>
        <label for="artista">Artista:</label>
        <input type="text" name="artista" value="<%= album.artista %>" required>
    </div>
    <div>
        <label for="fecha_lanzamiento">Fecha de lanzamiento:</label>
        <input type="date" name="fecha_lanzamiento" value="<%= album.fecha_lanzamiento %>" required>
    </div>
    <div>
        <label for="archivo_album">Archivo album:</label>
        <input type="text" name="archivo_album" value="<%= album.archivo_album %>" required>
    </div>
    <div>
        <label for="archivo_foto">Cambiar foto del álbum:</label>
        <input type="file" name="archivo_foto">
    </div>
    <button type="submit">Actualizar Álbum</button>
</form>
