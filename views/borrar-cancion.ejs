<!-- views/eliminar-cancion.ejs -->
<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Eliminar Canción</title>
</head>
<body>
    <h1>¿Estás seguro que deseas eliminar la canción "<%= cancion.nombre %>"?</h1>
    
    <form action="/borrar-cancion/<%= cancion.id %>" method="POST">
        <button type="submit">Eliminar</button>
        <a href="/listar-canciones">Cancelar</a>
    </form>
</body>
</html>
